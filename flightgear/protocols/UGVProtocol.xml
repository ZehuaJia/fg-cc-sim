<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
  <generic>
    <output>
      <!--
      <line_separator>newline</line_separator>
      <var_separator>tab</var_separator>
    -->
    <binary_mode>true</binary_mode> 
    <byte_order>host</byte_order>
    
    <!-- 0: Time -->
    <chunk>
      <name>Time</name>
      <node>/position/timetoday</node>
      <type>float</type>
      <format>%.10f</format>
    </chunk>

    <!-- 1: x position -->
    <chunk>
      <name>posx</name>
      <node>/fdm/jsbsim/positioning/posx</node>
      <type>float</type>
      <format>%03.3f</format>
    </chunk>

    <!-- 2: y position -->
    <chunk>
      <name>posy</name>
      <node>/fdm/jsbsim/positioning/posy</node>
      <type>float</type>
      <format>%03.3f</format>
    </chunk>

    <!-- 3: altitude (ft)-->
    <chunk>
      <name>altitude</name>
      <node>/fdm/jsbsim/position/h-agl-ft</node>
      <type>float</type>
      <format>%03.4f</format>
    </chunk>

    <!-- 4: true airspeed -->
    <chunk>
      <name>airspeed</name>
      <node>/fdm/jsbsim/velocities/vt-fps</node>
      <type>float</type>
      <format>%03.3f</format>
    </chunk>

    <!-- 5: acceleration -->
    <chunk>
      <name>acceleration</name>
      <node>/fdm/jsbsim/accelerations/udot-ft_sec2</node>
      <type>float</type>
      <format>%03.3f</format>
    </chunk>

    <!-- 6: heading angle (rad)-->
    <chunk>
      <name>heading</name>
      <node>/fdm/jsbsim/flight-path/psi-gt-rad</node>
      <type>float</type>
      <format>%03.4f</format>
    </chunk>
    
    </output>
  </generic>
</PropertyList>
